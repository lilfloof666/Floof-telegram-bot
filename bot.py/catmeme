def seconds_until(hour: int, minute: int) -> int:
    """Berechne, wie viele Sekunden bis zur n√§chsten HH:MM sind."""
        now = datetime.now()
            target = now.replace(hour=hour, minute=minute, second=0, microsecond=0)
                if target <= now:
                        target += timedelta(days=1)
                            return int((target - now).total_seconds())

                            def send_cat_meme():
                                """Schickt ein zuf√§lliges Cat-Meme-Bild in den Kanal."""
                                    image_url = random.choice(CAT_IMAGES)
                                        caption = random.choice(CAPTIONS)
                                            bot.send_photo(CHAT_ID, image_url, caption=caption)
                                                print(f"[OK] Cat Meme gesendet um {datetime.now()}")

                                                def main():
                                                    print("üê± Daily Cat Meme Bot gestartet...")
                                                        while True:
                                                                # ‚è∞ Warte bis 19:00 (Serverzeit!)
                                                                        wait_seconds = seconds_until(19, 0)
                                                                                print(f"Warte {wait_seconds} Sekunden bis 19:00...")
                                                                                        time.sleep(wait_seconds)

                                                                                                # üêà Meme senden
                                                                                                        try:
                                                                                                                    send_cat_meme()
                                                                                                                            except Exception as e:
                                                                                                                                        print(f"[FEHLER] Beim Senden: {e}")

                                                                                                                                                # Kleiner Puffer, damit er nicht zweimal abschickt,
                                                                                                                                                        # falls die Zeitberechnung knapp ist
                                                                                                                                                                time.sleep(5)

                                                                                                                                                                if __name__ == "__main__":
                                                                                                                                                                    main()
